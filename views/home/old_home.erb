            <span class='ml10'>
              <div class='deepblue1'><%=user[:name]%>, <%=user[:title]%></div>
              <div>
                <% if user[:desc].present? %>
                  <span class='search_desc'><%=user[:desc]%>. </span>
                <% end %>
                
