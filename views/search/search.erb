.single_brand_search_link {
  cursor: pointer;
  border-radius: 10px;
  background-color:white;
  margin: 5px;  
  width: 80%;
  padding: 5px 10px;
  display: flex;
  color: #1F5151;
  align-items: baseline;
  display: inline-flex;
  text-transform: uppercase;
}
.single_brand_search_link.selected {
