  min-height: 700px;
}
.main_search_area {
  zbackground-color: whitesmoke;
  padding: 0 20px;
}
@media (max-width: 1000px) {
  .main_search_area {
    overflow-y: scroll;
    margin: 0;
    padding: 0;
  }
  .search_screen_container {
    flex-direction: column;
  }
  .brandSelectorContainer {
    max-height: 30%;
  }
  .right_of_results {
    display: none;
  }
}
.selector_options_list {
  text-align: center;
  padding-top: 1px;
}
.brandSelectorLabel {
  background-color: #008b24;
  color: white;
