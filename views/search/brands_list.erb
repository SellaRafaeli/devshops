<%
  msg = 'Explore Top Cannabis Brands'
  city = pr[:city].present? ? "/ #{pr[:city]}" : ""
  msg = "Top Cannabis Recommendations in #{pr[:city]}" if pr[:city]
  msg = "Order Weed Now #{city}"
%>

<style>
.brands_list {
  zdisplay: flex;
  flex-wrap: wrap;
}
.single_brand {  
  flex: 25%;
  margin: 0 10px 10px 0px;
  ztext-align: center;
  border:1px solid lightgrey;
  zbackground-color: white;
  padding: 10px 0;
  border-radius: 4px;
  font-size: 16px;
  border-radius: 0;
  border: none;
  border-bottom: 2px solid black;
  width: 50%;
  display: inline-block;
}
.single_brand:hover {
  border-color: grey;
  font-weight: bold;
  color: black;
}
.single_brand .brand_img { 
  height: 40px;
  max-width: 100%;
  object-fit: contain;
  margin-right: 20px;
}
</style>
<h1> <%= msg%> </h1>
<div class='brands_list_container'>
  <div class='brands_list'>
    <% brands.each do |user| %>
      <div>
        <a class='single_brand' href='<%=user_link(user)%>'>  
          <img class='brand_img' src='<%=user[:img_url]%>' />
          <span class='brand_handle'><%=user[:handle]%></span>
          <div><small><%= user[:delivery_area] %></small></div>
        </a>
      <% casts = $casts.get_many(user_id: user[:_id]) %>
      <%= erb :'casts/casts_list', locals: {casts: casts, show_product_categories: false} %>
      </div>
    <% end %>
  </div>
</div>