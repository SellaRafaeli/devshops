<%
  threads = $threads.all
%>

<style>
.forum_page {
  max-width: 1000px;
  margin: auto;
}

.single_thread {
  font-size: 15px;
  background-color: whitesmoke;
  padding: 20px;
  margin-top: 20px;
}

.single_thread img {
  height: 40px;
  width: 40px;
  border-radius: 50%;
  margin-right: 10px;
}
.forum_msg_created_at {
  font-size: 12px;
  color: grey;
}
.forum_title {
  margin-top:10px;
  font-size: 20px;
}
</style>
<div class='forum_page'>
  <h1> Forum </h1>

  <div class='threads_list'>
    <% threads.each do |thread| %>
      <% sender_user = $users.get(thread[:user_id]) %>      
      <div class='single_thread'>
        <img src="<%=sender_user[:img_url]%>" />
        <span><%= sender_user[:handle] %></span>                
        <span class='forum_msg_created_at'>/ <%= nice_datetime thread[:created_at] %></span>
        <div class='forum_title'>
          <a href='/forum/<%=thread[:_id]%>/<%=thread[:title]%>' class='simple_link'><%= thread[:title] %></a>
        </div>
      </div>
    <% end %>
  </div>

  <form method=post action='/forum/threads'>
    <h3> Create New Thread </h3>
    <input name=title class=input1 placeholder='Title'>
    <button class='btn btn-primary btn-raised'> Create New Thread </button>
  </form>
</div>