<style>
.top-nav {
  margin: 0 20px;
  margin: 0;
  <% if !$prod %>
  border: 1px solid goldenrod;
  <% end %>

  <% if heb %>
  zdirection: rtl;
  <% end %>

}
.footer a {
  margin: 20px;  
  /*color: #209CEE;*/
  color: #aab8c2
}

.top-nav a:not(.logo) {
  color: black;
  margin: 20px;
  font-size: 14px;
}

.top-nav a:not(.logo):hover {
  color: grey;
}

@media screen and (min-width: 1000px) {
  .logo {
    width: 300px;
    zborder:1px solid red;
    display: inline-block;
    vertical-align: top;
    position: relative;
  }
  .search_go_btn {
    /*display: none;*/
  }

  .top-nav {
    margin: 0 20px;
    padding: 20px 0 10px;    
    height: 50px;
    /*position: absolute;
    
    top: 0;
    left: 0;
    z-index: 999;*/
  }

  .top-nav a:not(.logo) {
    background-color: white;
    padding: 5px 10px;
  }
}


.search_input {
  padding: 13px 40px 13px 20px;
  border: 1px solid grey;
  font-size: 17px;
  width: 200px;
  margin-left: 0px;
}

@media screen and (max-width: 600px) {
  .container {
    margin-top:10px;
    position: relative;
    top: 30px;
  }
  .search_input {
    width: 300px;
  }
  .top-nav {
    margin: 10px;
/*    border-bottom:1px solid whitesmoke;*/
    position: relative;

  }
  .top-nav a, .top-nav .search_input_form {
    display: none;
    margin: 5px;
  }
  /*.fa-gear:hover {
    color: red;
  }*/
  .top-nav a:not(.logo).expanded, .top-nav .search_input_form.expanded {
    display: block;
    padding: 15px;
    background:whitesmoke;
    padding-right: 30px;
    margin-left: 50px;
    color: black;
    text-align: center;
  }

  .top-nav a.logo {
    display: none;
  }
  .hamburger {
    display: block;
  }

  .create_form {
    float: left;
  }

  .search_input {
    padding-right: 0;
  }
}

.search_input_form {
/*  display: inline-block;*/
}

.logo_sub_text {
  position: relative;
  top: 20px;
  <% if heb %>  
  left: 80px;
  <% else %>
  right: 80px;
  <% end %>
  font-size: 13px;
  color: grey;
}

#top_plus_btn {
  font-size: 17px;
  border-radius: 4px;
  padding: 3px 20px;
  position: relative;
  top: 0px;
}

.country_icon_container {
  zbackground: linear-gradient(#e66465, #9198e5, #47f53b);  
}

.country_icon {
  height: 35px;
  width: 35px;
  padding: 0;
  border-radius: 50%;
}
.client_logo {
  background-color: #324167;
  padding: 10px;
  border-radius: 10px;
}
.sub_logo_msg {
  font-size: 14px; 
  color:#1F5151; 
  left: 6px;
  position: absolute;
  top: 26px;
}
</style>

<%
  path = _req.path rescue ''
  logo = '/favicon.ico'
  logo = '/img/landing_page/logo6.png'
  use_client_logo = pr[:use_client_logo]
  if use_client_logo 
    logo = 'https://images.squarespace-cdn.com/content/v1/5488a9e6e4b0563d5788db1a/12d1da8f-17e9-4462-a4df-d58a3e7c0f27/Tilray+Logo+-+Header.png?format=1500w'
  end
  is_post_page = path.to_s.starts_with?('/posts/') rescue false
  is_main_page = path.to_s == '/' rescue false
%>

<% if path.starts_with?('/admin') %>
  <div style='padding:10px'>
    <a href='/admin'><b>Admin</b></a>
    <a class='btn' href='/'>Homepage</a>
    <a target=_blank class='btn btn-info' href='/admin/daily_report'>Daily Report</a>
    <a target=_blank class='btn btn-info' href='/admin/talent'>Talent</a>
  </div>
<% else %>

  <div class='top-nav'>
    <% if path!='/z' %>
    <span>
      <a class='logo <%=use_client_logo ? 'client_logo' : ''%>' href='/'> 
        <img src='<%=logo%>' style='height:30px'/>
        <div class='sub_logo_msg'>the cannabis marketplace</div>
      </a>
    </span>
    <% if use_client_logo %>
    <!-- <div>A world of well-being</div> -->
    <% end %>
    <% end %>       


    <div class='logo_container' style='display: inline-block; display: none'>
      <a href='/' class='logo'>
        <b style='color: #00b140'>
          <img src='/img/nowcast_logo_pause.png' style='height:80px' />
        </b> 
        <small class='logo_sub_text'>
          <%= html_title %>
        </small>
      </a>    
    </div>
    
    <% unless @hide_header %>
    
    <!-- <a class='nowcast_color' href='/' style='color: #00b140'>
      Good-Weed
    </a>     -->
    <% if cu %>
      <a class='' href='/me'>
        <%= cu_logo %>         
         <b><%= cu[:name] %> </b><%= "<b class='nowcast_color'>(pro)</b>" if is_pro(cu) %>
       </a>       
      <!-- <a class='' target=_blank href='/@<%=cu['handle']%>'>
        <i class='fa fa-external-link' style='margin-right: 5px'></i> View @<%=cu['handle']%>         
      </a>     -->
    <% else %>      
      <a class='' href='/login'>
      <%= !heb ? 'Login' : 'כניסה' %>
      </a>    
      <a class='btn btn-primary btn-raised' href='/signup?type=buyer'>
      <%= !heb ? 'Sign Up To Buy' : 'הרשמה' %>
      
      </a>      
      <a class='btn btn-info btn-raised' href='/signup?type=seller'>
      <%= !heb ? 'Sign Up To Sell' : 'הרשמה' %>
      
      </a>      
    <% end %>
    <a class='' href='/search'><i class='fa fa-search'></i> <%= 'search' %> </a>
    <a class='' href='/forum'><i class='fa fa-forum'></i> <%= 'forum' %> </a>
    
      <% ([] || ['usa', 'israel']).each do |country| %>
        <a style='padding: 0' class='country_icon_container' href='/?country=<%=country%>'><img class='country_icon' src='/img/icons/<%=country%>.png' /></a>
      <% end %>
      <!-- <a class='' href='/community'>Community</a> -->
    <% if cu && false %>
      <a href='/chat'>

        <i style='zfont-size: 50%; position: relative; zbottom:5px; zmargin-left:20px' class='fal fa-envelope'></i>
        <span class='header_envelope_num_unreads noDisplay'></span>
        <span style='margin-left: 5px'>Messages</span>
      </a>
    <% end %>

    <%#= erb :'search/search_inputs_row' if search_input_on_top %>      
    <% 
      link = cu ? '/create' : '/signup?type=event' 
      text = cu ? '+ create' : 'join'
    %>

    <% if false %>
      <a href='<%= link %>' class='btn btn-primary btn-raised btn-info' id='top_plus_btn'><%= text %></a>
    <% end %>
    <% if cu %>      
      <a class='' href='/logout' onclick="return confirm('Are you sure you wish to log out?')"><i class='fal fa-times-circle' ></i></a>
    <% end %>    

    
    <% end %>

    <%= erb :'header/hamburger' %>
  </div>  
<% end %>  