<style>
.top-nav {
  margin: 0 20px;
  <% if !$prod %>
  border: 1px solid goldenrod;
  <% end %>

  <% if heb %>
  direction: rtl;
  <% end %>

}
.footer a {
  margin: 20px;  
  /*color: #209CEE;*/
  color: #aab8c2
}

.top-nav a:not(.logo) {
  color: black;
  margin: 20px;
  font-size: 14px;
}

.top-nav a:not(.logo):hover {
  color: grey;
}

@media screen and (min-width: 1000px) {
  .search_go_btn {
    /*display: none;*/
  }

  .top-nav {
    margin: 0 20px;
    padding: 20px 0;
    
    /*position: absolute;
    
    top: 0;
    left: 0;
    z-index: 999;*/
  }

  .top-nav a:not(.logo) {
    background-color: white;
    padding: 5px 10px;
  }
}


.search_input {
  padding: 13px 40px 13px 20px;
  border: 1px solid grey;
  font-size: 17px;
  width: 380px;
  margin-bottom: 20px;
}

@media screen and (max-width: 600px) {
  .container {
    margin-top:10px;
    position: relative;
    top: 30px;
  }
  .search_input {
    width: 300px;
  }
  .top-nav {
    margin: 10px;
/*    border-bottom:1px solid whitesmoke;*/
    position: relative;

  }
  .top-nav a, .top-nav .search_input_form {
    display: none;
    margin: 5px;
  }
  /*.fa-gear:hover {
    color: red;
  }*/
  .top-nav a:not(.logo).expanded, .top-nav .search_input_form.expanded {
    display: block;
    padding: 15px;
    background:whitesmoke;
    padding-right: 30px;
    margin-left: 50px;
    color: black;
    text-align: center;
  }

  .top-nav a.logo {
    display: none;
  }
  .hamburger {
    display: block;
  }

  .create_form {
    float: left;
  }

  .search_input {
    padding-right: 0;
  }
}

.search_input_form {
/*  display: inline-block;*/
}

.logo_sub_text {
  position: relative;
  top: 20px;
  <% if heb %>  
  left: 80px;
  <% else %>
  right: 80px;
  <% end %>
  font-size: 13px;
  color: grey;
}

#top_plus_btn {
  font-size: 17px;
  border-radius: 4px;
  padding: 3px 20px;
  position: relative;
  top: 0px;
}

.country_icon_container {
  zbackground: linear-gradient(#e66465, #9198e5, #47f53b);  
}

.country_icon {
  height: 35px;
  width: 35px;
  padding: 0;
  border-radius: 50%;
}
</style>

<%
  logo = '/favicon.ico'
  is_post_page = _req.path.to_s.starts_with?('/posts/')
  is_main_page = _req.path.to_s == '/'
%>

<% if _req.path.starts_with?('/admin') %>
  <div style='padding:10px'><b>Admin</b>
    <a class='btn' href='/'>Homepage</a>
    <a target=_blank class='btn btn-info' href='/admin/stats'>Admin Stats</a>
    <a target=_blank class='btn btn-info' href='/admin/talent'>Talent</a>
  </div>
<% else %>

  <div class='top-nav'>
    <% if _req.path!='/z' %>
    <!-- <a class='logo' href='/'> <img src='<%=logo%>' style='height:30px'/></a> -->
    <% end %>       


    <div class='logo_container' style='display: inline-block; display: none'>
      <a href='/' class='logo'>
        <b style='color: #00b140'>
          <img src='/img/nowcast_logo_pause.png' style='height:80px' />
        </b> 
        <small class='logo_sub_text'>
          <%= html_title %>
        </small>
      </a>    
    </div>
    
    <% unless @hide_header %>
    
    <a class='nowcast_color' href='/' style='color: #00b140'>
      Gutenweed-IL
    </a>    
    <% if cu %>
      <a class='' href='/me'>
        <% if !is_heb %><i class='fal fa-user' style='margin-right: 10px'></i><% end %>

         <%= cu[:name] %> <%= "<b class='nowcast_color'>(pro)</b>" if is_pro(cu) %>
       </a>       
      <!-- <a class='' target=_blank href='/@<%=cu['handle']%>'>
        <i class='fa fa-external-link' style='margin-right: 5px'></i> View @<%=cu['handle']%>         
      </a>     -->
    <% else %>      
      <a class='' href='/login'>
      <%= !heb ? 'Login' : 'כניסה' %>
      </a>    
      <a class='' href='/signup'>
      <%= !heb ? 'Sign Up' : 'הרשמה' %>
      
      </a>
    <% end %>
    
      <% ([] || ['usa', 'israel']).each do |country| %>
        <a style='padding: 0' class='country_icon_container' href='/?country=<%=country%>'><img class='country_icon' src='/img/icons/<%=country%>.png' /></a>
      <% end %>
      <!-- <a class='' href='/community'>Community</a> -->
    <% if cu && false %>
      <a href='/chat'>

        <i style='zfont-size: 50%; position: relative; zbottom:5px; zmargin-left:20px' class='fal fa-envelope'></i>
        <span class='header_envelope_num_unreads noDisplay'></span>
        <span style='margin-left: 5px'>Messages</span>
      </a>
    <% end %>

    <%#= erb :'search/search_inputs_row' if search_input_on_top %>      
    <% 
      link = cu ? '/create' : '/signup?type=event' 
      text = cu ? '+ create' : 'join'
    %>

    <% if false %>
      <a href='<%= link %>' class='btn btn-primary btn-raised btn-info' id='top_plus_btn'><%= text %></a>
    <% end %>
    <% if cu %>      
      <a class='' href='/logout' onclick="return confirm('Are you sure you wish to log out?')"><i class='fal fa-times-circle' ></i></a>
    <% end %>    

    <a class='btn btn-raised btn-primary' href='/?submit=1'>
      <%= !heb ? 'submit anonymous recommendation <i class="fa fa-leaf" style="margin-left:5px"></i>' : 'השאר ביקורת אנונימית' %>      
    </a>
    <% end %>

    <%= erb :'header/hamburger' %>
  </div>  
<% end %>  